#!/bin/bas
nextHosts(){
if [[ "$1" == "porn" ]]
then
wget https://raw.githubusercontent.com/davosmeza/AntiPorn-2024/refs/heads/main/hosts -O /etc/captiveportal/hosts.porn
if [[ "$?" != "0" ]]
then
exit 1
fi
fi
if [[ "$1" == "ads" ]]
then
wget https://someonewhocares.org/hosts/hosts -O /etc/captiveportal/hosts.ads
if [[ "$?" != "0" ]]
then
exit 1
fi
fi
cat /etc/captiveportal/hosts.$1 >> /etc/captiveportal/hosts
shift
if [[ "$1" != "" ]]
then
exit 0
fi
nextHosts
}
if [[ "$1" == "" ]]
then
echo "Usage: $0 <categories>"
echo "Installs a categories of sites to block"
echo "Categories avaliable are: ads and porn"
exit 1
fi
rm /etc/captiveportal/hosts
nextHosts
update-hosts
